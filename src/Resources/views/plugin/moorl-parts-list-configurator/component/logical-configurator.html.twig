{% if logicalConfigurator %}
    {% block parts_list_logical_configurator %}
        {% if logicalConfigurator.groupTechnicalName == 'PARTS_LIST_LAYOUT' %}
            {% for element in logicalConfigurator.elements %}
                <hr>

                <div class="row">
                    <div class="col-3 product-detail-configurator-group-title">
                        {{ "moorl-parts-list-configurator.logical-configurator.properties.#{element.name}"|trans }}
                    </div>

                    <div class="col-9">
                        <div class="input-group mb-2">
                            <span class="input-group-text">
                                {{ "moorl-parts-list-configurator.logical-configurator.properties.totalWidth"|trans }}
                            </span>
                            <input
                                    class="form-control"
                                    type="number"
                                    name="{{ element.name }}.length"
                                    min="2500"
                                    step="500"
                            />
                            <span class="input-group-text">mm</span>
                        </div>

                        {% sw_include '@MoorlFoundation/plugin/moorl-foundation/component/product-parts-list/index.html.twig' with {
                            items: accessoryList,
                            options: {
                                variant: 'slider'
                            }
                        } %}
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    {% endblock %}
{% endif %}
