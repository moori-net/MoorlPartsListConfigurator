{% sw_extends '@Storefront/storefront/layout/meta.html.twig' %}

{% block layout_head_meta_tags_opengraph %}
    <meta property="og:type"
          content="article"/>
    <meta property="og:site_name"
          content="{{ config('core.basicInformation.shopName') }}"/>
    <meta property="og:url"
          content="{{ seoUrl('frontend.moorl.fence.configurator.detail', { fenceConfiguratorId: fenceConfigurator.id }) }}"/>
    <meta property="og:title"
          content="{{ fenceConfigurator.translated.metaTitle ? fenceConfigurator.translated.metaTitle : metaTitle }}"/>
    <meta property="og:description"
          content="{{ fenceConfigurator.translated.metaDescription ?: fenceConfigurator.translated.teaser }}"/>
    <meta property="og:image"
          content=""/>

    <meta name="twitter:card"
          content="article"/>
    <meta name="twitter:site"
          content="{{ config('core.basicInformation.shopName') }}"/>
    <meta name="twitter:title"
          content="{{ fenceConfigurator.translated.metaTitle ? fenceConfigurator.translated.metaTitle : metaTitle }}"/>
    <meta name="twitter:description"
          content="{{ fenceConfigurator.translated.metaDescription ?: fenceConfigurator.translated.teaser }}"/>
    <meta name="twitter:image"
          content=""/>
{% endblock %}

{% block layout_head_canonical %}
    <link rel="canonical" href="{{ seoUrl('frontend.moorl.fence.configurator.detail', { fenceConfiguratorId: fenceConfigurator.id }) }}"/>
{% endblock %}
