{% block element_creator_product_listing %}
    {% set searchResult = page.products %}
    {% set listingColumns = 'col-sm-6 col-lg-4 col-xl-3' %}
    {% set filterUrl = url('frontend.moorl.creator.filter', { creatorId: page.creator.id }) %}
    {% set dataUrl = url('frontend.moorl.creator.products', { creatorId: page.creator.id }) %}
    {% set params = { 'no-aggregations': 1 } %}

    {% if searchResult %}
        {% block element_creator_product_listing_wrapper %}
            {% sw_include '@Storefront/storefront/component/product/listing.html.twig' with {
                searchResult: searchResult,
                dataUrl: dataUrl,
                filterUrl: filterUrl,
                params: params,
                sidebar: false,
                boxLayout: element.translated.config.boxLayout.value,
                displayMode: element.translated.config.displayMode.value,
                listingColumns: listingColumns
            } %}
        {% endblock %}
    {% endif %}
{% endblock %}
