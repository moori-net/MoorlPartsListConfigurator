{% sw_extends '@Storefront/storefront/component/listing/filter-panel.html.twig' %}

{% block component_filter_panel_item_manufacturer %}
    {% set creators = listing.aggregations.get('creator') %}
    {% if creators and not creators.entities is empty %}
            {% set creatorsSorted = creators.entities|sort((a, b) => a.translated.name|lower > b.translated.name|lower) %}

            {% sw_include '@Storefront/storefront/component/listing/filter/filter-multi-select.html.twig' with {
                elements: creatorsSorted,
                sidebar: sidebar,
                name: 'creator',
                displayName: 'moorl-creator.creator'|trans
            } %}
    {% endif %}
    
    {{ parent() }}
{% endblock %}
