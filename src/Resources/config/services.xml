<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="data.xml"/>
    </imports>

    <services>
        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorDefinition">
            <tag name="shopware.entity.definition" entity="moorl_fc"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorTranslationDefinition">
            <tag name="shopware.entity.definition" entity="moorl_fc_translation"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorOptionDefinition">
            <tag name="shopware.entity.definition" entity="moorl_fc_option"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorPostOptionDefinition">
            <tag name="shopware.entity.definition" entity="moorl_fc_post_option"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\PropertyGroupOption\PropertyGroupOptionExtension">
            <tag name="shopware.entity.extension"/>
        </service>
    </services>
</container>
