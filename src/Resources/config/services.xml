<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="data.xml"/>
    </imports>

    <services>
        <!-- Entities -->
        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorDefinition">
            <tag name="shopware.entity.definition" entity="moorl_fc"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorTranslationDefinition">
            <tag name="shopware.entity.definition" entity="moorl_fc_translation"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorOptionDefinition">
            <tag name="shopware.entity.definition" entity="moorl_fc_option"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorPostOptionDefinition">
            <tag name="shopware.entity.definition" entity="moorl_fc_post_option"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorLogicalOptionDefinition">
            <tag name="shopware.entity.definition" entity="moorl_fc_logical_option"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorMediaDefinition">
            <tag name="shopware.entity.definition" entity="moorl_fc_media"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\PropertyGroupOption\PropertyGroupOptionExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\SalesChannel\SalesChannelFenceConfiguratorDefinition">
            <tag name="shopware.sales_channel.entity.definition"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\SalesChannel\FenceConfiguratorListing">
            <argument type="service" id="sales_channel.moorl_fc.repository"/>

            <tag name="moorl.foundation.entity_suggest" priority="0"/>
            <tag name="moorl.foundation.entity_search" priority="0"/>
        </service>

        <!-- SEO -->
        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\DataAbstractionLayer\FenceConfiguratorIndexer">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Dbal\Common\IteratorFactory"/>
            <argument type="service" id="moorl_fc.repository"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="MoorlFoundation\Core\Framework\DataAbstractionLayer\Indexing\HtmlContentUpdater"/>

            <tag name="shopware.entity_indexer"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\Seo\FenceConfiguratorSeoUrlRoute">
            <argument type="service" id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorDefinition"/>

            <tag name="shopware.seo_url.route"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\Seo\SeoUrlUpdateListener">
            <argument type="service" id="Shopware\Core\Content\Seo\SeoUrlUpdater"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\SalesChannel\FenceConfiguratorDetailRoute" public="true">
            <argument type="service" id="sales_channel.moorl_fc.repository"/>
            <argument type="service" id="Shopware\Core\Content\Cms\SalesChannel\SalesChannelCmsPageLoader"/>
            <argument type="service" id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\FenceConfiguratorDefinition"/>
        </service>

        <service id="Moorl\FenceConfigurator\Storefront\Page\FenceConfigurator\FenceConfiguratorPageLoader">
            <argument type="service" id="Shopware\Storefront\Page\GenericPageLoader"/>
            <argument type="service" id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\SalesChannel\FenceConfiguratorDetailRoute"/>
            <argument type="service" id="Shopware\Core\Content\Product\SalesChannel\Listing\ProductListingRoute"/>
        </service>

        <service id="Moorl\FenceConfigurator\Storefront\Controller\FenceConfiguratorController" public="true">
            <argument type="service" id="Moorl\FenceConfigurator\Storefront\Page\FenceConfigurator\FenceConfiguratorPageLoader"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setTwig">
                <argument type="service" id="twig"/>
            </call>
        </service>

        <service id="Moorl\FenceConfigurator\Core\Content\FenceConfigurator\SalesChannel\Listing\FenceConfiguratorListingFeaturesSubscriber">
            <argument type="service" id="MoorlFoundation\Core\Service\SortingService"/>

            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
