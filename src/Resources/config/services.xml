<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="data.xml"/>
    </imports>

    <services>
        <!-- Entities -->
        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\PartsListConfiguratorDefinition">
            <tag name="shopware.entity.definition" entity="moorl_pl"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\PartsListConfiguratorTranslationDefinition">
            <tag name="shopware.entity.definition" entity="moorl_pl_translation"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\PartsListConfiguratorProductStreamDefinition">
            <tag name="shopware.entity.definition" entity="moorl_pl_product_stream"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\PartsListConfiguratorFilterDefinition">
            <tag name="shopware.entity.definition" entity="moorl_pl_filter"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\PartsListConfiguratorFilterOptionDefinition">
            <tag name="shopware.entity.definition" entity="moorl_pl_filter_option"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\PartsListConfiguratorMediaDefinition">
            <tag name="shopware.entity.definition" entity="moorl_pl_media"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PropertyGroupOption\PropertyGroupOptionExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\SalesChannel\SalesChannelPartsListConfiguratorDefinition">
            <tag name="shopware.sales_channel.entity.definition"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\SalesChannel\PartsListConfiguratorListing">
            <argument type="service" id="sales_channel.moorl_pl.repository"/>

            <tag name="moorl.foundation.entity_suggest" priority="0"/>
            <tag name="moorl.foundation.entity_search" priority="0"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\Product\SalesChannel\ProductSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- SEO -->
        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\DataAbstractionLayer\PartsListConfiguratorIndexer">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Dbal\Common\IteratorFactory"/>
            <argument type="service" id="moorl_pl.repository"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="MoorlFoundation\Core\Framework\DataAbstractionLayer\Indexing\HtmlContentUpdater"/>

            <tag name="shopware.entity_indexer"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\Seo\PartsListConfiguratorSeoUrlRoute">
            <argument type="service" id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\PartsListConfiguratorDefinition"/>

            <tag name="shopware.seo_url.route"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\Seo\SeoUrlUpdateListener">
            <argument type="service" id="Shopware\Core\Content\Seo\SeoUrlUpdater"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\SalesChannel\PartsListConfiguratorDetailRoute" public="true">
            <argument type="service" id="sales_channel.moorl_pl.repository"/>
            <argument type="service" id="Shopware\Core\Content\Cms\SalesChannel\SalesChannelCmsPageLoader"/>
            <argument type="service" id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\PartsListConfiguratorDefinition"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Storefront\Page\PartsListConfigurator\PartsListConfiguratorPageLoader">
            <argument type="service" id="Shopware\Storefront\Page\GenericPageLoader"/>
            <argument type="service" id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\SalesChannel\PartsListConfiguratorDetailRoute"/>
            <argument type="service" id="Shopware\Core\Content\Product\SalesChannel\Listing\ProductListingRoute"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="tagged" tag="moorl.parts.list.calculator"/>
        </service>

        <service id="Moorl\PartsListConfigurator\Storefront\Controller\PartsListConfiguratorController" public="true">
            <argument type="service" id="Moorl\PartsListConfigurator\Storefront\Page\PartsListConfigurator\PartsListConfiguratorPageLoader"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setTwig">
                <argument type="service" id="twig"/>
            </call>
        </service>

        <service id="Moorl\PartsListConfigurator\Core\Content\PartsListConfigurator\SalesChannel\Listing\PartsListConfiguratorListingFeaturesSubscriber">
            <argument type="service" id="MoorlFoundation\Core\Service\SortingService"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Calculators -->
        <service id="Moorl\PartsListConfigurator\Core\Calculator\DemoFenceCalculator">
            <tag name="moorl.parts.list.calculator"/>
        </service>
    </services>
</container>
